<header class="header">
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-md-3">
                <div class="header__logo">
                    <a href="#">
                        <h2>TIMED.</h2>
                    </a>
                </div>
            </div>
            <div class="col-lg-6 col-md-6">
                <nav class="header__menu mobile-menu">
                    <ul>
                        <li><a href="/">Home</a></li>
                        <li><a href="/product-list">Store</a></li>
                        <li class="active"><a href="/userprofile">Profile</a></li>
                    </ul>
                </nav>
            </div>
            <div class="col-lg-3 col-md-3">
                <div class="header__nav__option">
                    <a href="/wishlist"><img src="img/icon/heart-line.png" alt=""></a>
                    <a href="/cart"><img src="img/icon/shopping-cart-line.png" alt=""></a>
                    <a href="/logout"><img src="img/icon/logout-circle-r-line.png" alt=""></a>

                </div>
            </div>
        </div>
        <div class="canvas__open"><i class="fa fa-bars"></i></div>
    </div>
</header>
<section class="h-100 h-custom" style="background-color: #eee;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col">
                <div class="card rounded-0">
                    <div class="card-body p-4">

                        <div class="row">
                            <div class="col-lg-5">
                                <h5 class="mb-3"><a href="#!" class="text-body">Profile</a></h5>
                                <hr>
                                <div class="card mb-3">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-center">
                                            <div class="d-flex flex-column align-items-center w-100">
                                                <div class="w-100 d-flex flex-column align-items-center">
                                                    <img src="/images/User-Avatar-Profile-PNG-Pic.png" class="img-fluid"
                                                        alt="Shopping item"
                                                        style="width: 150px; height:150px; border-radius:100px">
                                                    <h5 class="mt-3 text-center">{{user.name}}</h5>
                                                    <span>{{user.email}}</span>
                                                    <div class="d-flex mt-3" style="gap:10px">
                                                        <a href="/edit-profile/{{user._id}}"
                                                            class="btn btn-outline-dark rounded-0">Edit</a>
                                                        <a href="/logout" class="btn btn-dark rounded-0">Logout</a>
                                                    </div>

                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="card mb-3">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between">
                                            <div class="d-flex flex-row align-items-center">
                                                <div class="ms-3">
                                                    <h5>Wallet</h5>
                                                </div>
                                            </div>
                                            <div class="d-flex flex-row align-items-center">
                                                <a href="#!" style="color: #cecece;">
                                                    {{user.wallet}}
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="card mb-3">
                                    <div onclick="window.location.href=''" class="card-body">
                                        <div class="d-flex justify-content-between">
                                            <div class="d-flex flex-row align-items-center">
                                                <div class="ms-3">
                                                    <h5>Orders </h5>
                                                </div>
                                            </div>
                                            <div class="d-flex flex-row align-items-center">
                                                <a href="/orderhistory" style="color: #cecece;"><i
                                                        class="ri-shopping-bag-2-fill"></i></a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-7">
                                <h5 class="mb-3"><a href="#!" class="text-body">Address</h5>
                                <hr>
                                <div class="d-flex justify-content-between align-items-center mb-4">
                                    <div>
                                        <p class="mb-0">Manage Your Address</p>
                                    </div>
                                    <div>
                                        <a href="/add-address" class="btn btn-dark rounded-0">Add Address</a>
                                    </div>
                                </div>
                                {{#each user.address}}
                                <div class="card mb-3">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between">
                                            <div class="d-flex flex-row align-items-center">
                                                <div class="ms-3">
                                                    <h5>{{this.name}} <a href="/edit-address/{{this._id}}" class="ms-2">
                                                            <i class="ri-pencil-fill" style="font-size: .9rem;"></i>
                                                        </a></h5>
                                                    <p class="small mb-0">{{this.mobile}}</p>
                                                    <p class="small mb-0">{{this.address}}</p>
                                                    <p class="small mb-0">{{this.pincode}}</p>
                                                </div>
                                            </div>
                                            <div class="d-flex flex-row align-items-center">
                                                <a href="/delete-address/{{this._id}}">
                                                    <i class="fas fa-trash-alt"></i></a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                {{/each}}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>