
<div class="add-address-main">
    <div class="container">
        
        <h3 class="text-center" >Edit Address</h3>
        <div class="add-address-container">
            <form class="add-box mt-3" id="addAddressForm" action="/edit-address" method="post">
            <input type="number" value="{{address._id}}" style="height: 0px; visibility:hidden" name="_id">
            <h4 class="mt-3">Manage Address</h4>
            <div class="add-row mt-1">
                <div class="add-row-col">
                    <label for="">Name</label>
                    <input type="text" name="name" value="{{address.name}}" required>
                </div>
                <div class="add-row-col">
                    <label for="">Mobile</label>
                    <input type="text" name="mobile" value="{{address.mobile}}" pattern="[0-9]*" maxlength="10" required >
                </div>
            </div>
            <div class="add-row">
                <div class="add-row-col">
                    <label for="">PIN Code</label>
                    <input type="number" name="pincode" value="{{address.pincode}}" required>
                </div>
                <div class="add-row-col">
                    <label for="">Locality</label>
                    <input type="text" name="locality" value="{{address.locality}}" required>
                </div>
            </div>
            
            <div class="add-row text-area">
                <div class="add-row-col">
                    <label for="">Address</label>
                    <textarea name="address" rows="5" form="addAddressForm"  required>{{address.address}}</textarea>
                </div>
            </div>

            <div class="add-row">
                <div class="add-row-col">
                    <label for="">City/Village/Town</label>
                    <input type="text" name="city" value="{{address.city}}" required>
                </div>
                <div class="add-row-col">
                    <label for="">State</label>
                    <input type="text" name="state" value="{{address.state}}" required>
                </div>
            </div>
            <div class="add-row">
                <button type="submit" class="btn btn-dark">Save Changes</button>
            </div>
        </form>
        </div>
    </div>
</div>