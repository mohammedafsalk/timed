<div class="row">
    <div class="col-12 text-center">
        <div class="header__logo">
            <h3 class="text-dark" style="font-weight: bolder;">TIMED</h3>
        </div>
    </div>    
</div>

<section class="vh-100 gradient-custom">
        <div class="container py-5 h-100">
          <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
              <div class="card  text-white" style="border-radius: 1rem; background-color:white">
                <div class="card-body p-5 text-center">
                  <div class="mb-md-5 mt-md-4 pb-5">
                    <h2 class="fw-bold mb-2 text-dark">Reset Password</h2>
                    <form action="/forgotpassword" method="post">
                     <p class="text-danger">{{error}}</p>
                      <div class="form-outline text-start form-dark mb-4 ">
                        <label class="form-label text-dark" for="typeEmailX">Enter Email</label>
                      <input type="email" id="typeEmailX" class="form-control bg-secondary bg-opacity-25 form-control-lg rounded-0 border-1" name="email" />
                    </div>
                    <button type="submit" class="site-btn">Next</button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section> 