
<div class="add-address-main">
    <div class="container">
        
        <h3 class="text-center" >Add Address</h3>
        <div class="add-address-container">
            <form class="add-box mt-3" id="addAddressForm" action="/add-address" method="post">
            <h4 class="mt-3">Manage Address</h4>
            <div class="add-row mt-1">
                <div class="add-row-col">
                    <label for="">Name</label>
                    <input type="text" name="name"  required>
                </div>
                <div class="add-row-col">
                    <label for="">Mobile</label>
                    <input type="text" name="mobile"  pattern="[0-9]*" maxlength="10" required >
                </div>
            </div>
            <div class="add-row">
                <div class="add-row-col">
                    <label for="">PIN Code</label>
                    <input type="number" name="pincode" required>
                </div>
                <div class="add-row-col">
                    <label for="">Locality</label>
                    <input type="text" name="locality"  required>
                </div>
            </div>
            
            <div class="add-row text-area">
                <div class="add-row-col">
                    <label for="">Address</label>
                    <textarea name="address" rows="5" form="addAddressForm" required></textarea>
                </div>
            </div>

            <div class="add-row">
                <div class="add-row-col">
                    <label for="">City/Village/Town</label>
                    <input type="text" name="city"  required>
                </div>
                <div class="add-row-col">
                    <label for="">State</label>
                    <input type="text" name="state"  required>
                </div>
            </div>
            <div class="add-row">
                <button type="submit" class="btn btn-dark">Add Address</button>
            </div>
        </form>
        </div>
    </div>
</div>