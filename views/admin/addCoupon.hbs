<section class="breadcrumb-option">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb__text text-center ">
                    <h4>Add Coupon</h4>
                </div>
            </div>
        </div>
    </div>
</section>
<div class="add-product-main">
    <h3>Add Coupon</h3>
    <form class="add-product-container mt-3" id="addProductForm" action="/admin/add-coupon" method="post">
        <div class="a-p-form-row">
            <div class="a-p-form-col">
                <label for="Category">Name</label>
                <input type="text" name="name" >
            </div>
        </div>
        <div class="a-p-form-row">
            <div class="a-p-form-col">
                <label for="Category">Code</label>
                <input type="text" name="code" required>
            </div>
        </div>
        <div class="a-p-form-row">
            <div class="a-p-form-col">
                <label for="Category">Expiry Date</label>
                <input type="date" name="exp" >
            </div>
        </div>
            <p class="text-danger">{{msg}}</p>
        <div class="a-p-form-row">
            <div class="a-p-form-col">
                <label for="Category">Discount</label>
                <input type="number" name="discount" required>
            </div>
        </div>
        <div class="a-p-form-row">
            <div class="a-p-form-col">
                <label for="Category">Minimum Amount</label>
                <input type="number" name="minamnt" >
            </div>
        </div>
        <b class="text-danger"></b>
        <div class="a-p-form-row">
            <button type="submit" class="btn btn-dark text-white">Add</button>
        </div>
    </form>
</div>