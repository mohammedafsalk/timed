<main class="main-content position-relative max-height-vh-100 h-100 mt-1 border-radius-lg ">
  <!-- Navbar -->
  <nav class="navbar navbar-main navbar-expand-lg px-0 mx-4 shadow-none border-radius-xl" id="navbarBlur"
    navbar-scroll="true">
    <div class="container-fluid py-1 px-3">
      <div class="collapse navbar-collapse mt-sm-0 mt-2 me-md-0 me-sm-4 justify-content-between" id="navbar">
        <h2>Products</h2>
        <ul class="navbar-nav  justify-content-end">
          <li class="nav-item">
            <a href="javascript:;" class="nav-link text-body font-weight-bold px-0">
              <i class="fa fa-user me-sm-1"></i>
              <span class="d-sm-inline d-none">Logout</span>
            </a>
          </li>
        </ul>
      </div>
    </div>
  </nav>
  <!-- End Navbar -->
  <div class="container-fluid py-4">
    <div class="row">
      <div class="col-sm-6 text-center">
        <a href="/admin/addProduct" class="btn btn-dark">Add Product</a>
      </div>
      <div class="col-sm-3">
        <form class="d-flex" role="search " action="/admin/searchProduct" method="post">
          <input class="form-control me-2" type="search" placeholder="Search Products" aria-label="Search" name="name">
          <button class="btn btn-dark text-white" type="submit">Search</button>
        </form>
      </div>
    </div>
    <div class="row">
      <div class="col-12">
        <div class="card mb-4">
          <div class="card-header pb-0">
          </div>
          <div class="card-body px-0 pt-0 pb-2">
            <div class="table-responsive p-0">
              <table class="table align-items-center mb-0">
                <thead>
                  <tr>
                    <th class=" text-uppercase text-dark  font-weight-bolder">Product</th>
                    <th class=" text-uppercase text-dark  font-weight-bolder">Price</th>
                    <th class="text-center text-uppercase text-dark  font-weight-bolder">Status</th>
                    <th class="text-center text-uppercase text-dark  font-weight-bolder">Quantity</th>
                    <th class=" text-uppercase text-dark  font-weight-bolder">Action</th>
                  </tr>
                </thead>
                <tbody>
                  {{#each products}}
                  <tr>
                    <td>
                      <div class="d-flex px-2 py-1">
                        <div>
                          <img src="/images/{{this.product.filename}}" class="avatar avatar-sm me-3" alt="user1">
                        </div>
                        <div class="d-flex flex-column justify-content-center">
                          <h5 class="mb-0 ">{{this.name}}</h5>
                          <h6 class=" text-secondary mb-0">{{this.brand}}</h6>
                        </div>
                      </div>
                    </td>
                    <td>
                      <h6 class="font-weight-bold mb-0 ">{{this.price}}</h6>
                    </td>
                    <td class="align-middle text-center text-sm">
                     {{#if this.list}}
                      <span class="badge badge-sm bg-gradient-success">Available</span>
                      {{else}}
                       <span class="badge badge-sm bg-gradient-danger">Not Available</span>
                       {{/if}}
                    </td>
                    <td class="align-middle text-center">
                      <span class="text-secondary  font-weight-bold">{{this.quantity}}</span>
                    </td>
                    <td class="align-middle d-flex gap-3">
                      <div class="dropdown">
                        <a href="/admin/editProduct/{{this._id}}" class="btn btn-outline-dark">Edit</a>
                        {{#if this.list}}
                        <a href="/admin/unlistProduct/{{this._id}}" class="btn btn-dark">Unlist</a>
                        {{else}}
                        <a href="/admin/listProduct/{{this._id}}" class="btn btn-dark">List</a>
                        {{/if}}
                      </div>
                    </td>
                  </tr>
                  {{/each}}
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
