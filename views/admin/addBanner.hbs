<style>
    .add-product-main{
    width: 100%;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: var(--lightWhite);
    padding-top: 50px;
}

.add-product-container{
    background-color: #ebe0e0;
    padding: 25px;
    width: 100%;
    max-width: 600px;
    display: flex;
    flex-direction: column;
    gap: 15px;
}

.a-p-form-row{
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
}

.a-p-form-col{
    display: flex;
    flex-direction: column;
    width: 100%;
    gap: 5px;
}

.a-p-form-row input, .a-p-form-row textarea, .a-p-form-row select{
    width: 100%;
    border: none;
    outline: none;
    font-size: .9rem;
    height: 50px;
    padding-left: 10px;
}

.a-p-form-row textarea{
    height: 100px;
}

.a-p-form-row button{
    border: none;
    width: 100%;
    height: 50px;
}

.a-p-form-img{
    width: 100%;
    background-color: #fff;
    padding: 10px;
    display: flex;
    flex-wrap: nowrap;
    overflow-x: scroll;
}

.a-p-form-img img{
    height: 100px;
}

.a-p-form-img i{
    position: relative;
    left: -70px;
    z-index: 100;
    font-size: 2rem;
    font-weight: 600;
    top: 40px;
    color: rgb(255, 0, 0);
    height: 20px;
    width: 20px;
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 20px;
    -webkit-text-stroke-width: 1px;
    -webkit-text-stroke-color: rgb(255, 255, 255);
}

.a-p-form-img input{
    transform: scale(1.7);
    position: relative;
    left: -70px;
    transform: scale(3.5);
    opacity: 0%;
}

.a-p-form-img input:checked{
    accent-color: red;
    opacity:60%;
}

@media only screen and (max-width: 768px) {
  .add-product-container {
    padding: 10px;
  }
  .a-p-form-row input,
  .a-p-form-row textarea,
  .a-p-form-row select {
    height: 40px;
    font-size: .8rem;
    padding-left: 5px;
  }
  .a-p-form-row textarea {
    height: 80px;
  }
  .a-p-form-img img {
    height: 80px;
  }
  .a-p-form-img i {
    top: 30px;
    height: 15px;
    width: 15px;
    font-size: 1.5rem;
  }
  .a-p-form-img input {
    transform: scale(1.2);
  }
  .a-p-form-row button {
    height: 40px;
  }
}



</style>

<div class="add-product-main">
    <h3>Add Banner</h3>
    <form class="add-product-container mt-3" id="addProductForm" action="/admin/addBanner" method="post" enctype="multipart/form-data">
        <div class="a-p-form-row">
            <div class="a-p-form-col">
                <label for="Category">Product Name</label>
                <input type="text" name="name"  required>
            </div>
        </div>
        <div class="a-p-form-row">
            <div class="a-p-form-col">
                <label for="Category">Caption</label>
                <input type="text" name="caption"  required>
            </div>
        </div>
        <div class="a-p-form-row">
            <div class="a-p-form-col">
                <label for="Category">Main Heading</label>
                <textarea name="mainhead" rows="2" form="addProductForm" ></textarea>
            </div>
        </div>
        <div class="a-p-form-row">
            <div class="a-p-form-col">
                <label for="Category">Description</label>
                <textarea name="description" rows="4" form="addProductForm" ></textarea>
            </div>
        </div>
        <div class="a-p-form-row">
            <div class="a-p-form-col">
                <label for="Category">Banner Image</label>
                <input type="file" name="image" accept="image/*" required>
            </div>
        </div>
            <b class="text-danger"></b>
        <div class="a-p-form-row">
            <button type="submit" class="btn btn-dark text-white">Add Banner</button>
        </div>
    </form>
</div>